<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="345.6dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4f6f8"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18.4dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="18.4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textWC"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:layout_marginTop="35.9dp"
            android:lineHeight="36.9sp"
            android:text="Welcome!"
            android:textColor="#455a64"
            android:textSize="29.5sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textWC"
            android:layout_marginTop="19.2dp"
            android:lineHeight="19.4sp"
            android:text="Email"
            android:textSize="11.1sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="308.7dp"
            android:layout_height="40.6dp"
            android:layout_below="@+id/textEmail"
            android:layout_marginTop="12.9dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/textPassword"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_below="@+id/editTextEmail"
            android:layout_marginTop="19.2dp"
            android:lineHeight="19.4sp"
            android:text="PASSWORD"
            android:textSize="11.1sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="308.7dp"
            android:layout_height="40.6dp"
            android:layout_below="@+id/textPassword"
            android:layout_marginTop="3dp"
            android:background="#fff" />

        <TextView
            android:id="@+id/Forgot"
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_below="@+id/editTextPassword"
            android:layout_marginTop="9.2dp"
            android:text="Forgot Password?"
            android:textAllCaps="false"
            android:textColor="#01b7cf"
            android:textSize="12.9dp"

            />

        <Button
            android:layout_width="230.4dp"
            android:layout_height="40.6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="43.3dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="14.7dp"

            />


        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9.2dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="166dp"
                android:layout_height="20dp"
                android:lineHeight="19.4dp"
                android:text="Havenâ€™t had an account yet?"
                android:textAllCaps="false"
                android:textColor="#455a64"
                android:textSize="12.9sp"

                />

            <TextView

                android:layout_width="54dp"
                android:layout_height="20dp"
                android:layout_marginLeft="7.3dp"
                android:lineHeight="19.4dp"
                android:text="SIGN UP"
                android:textColor="#01b7cf"
                android:textSize="12.9sp"

                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:horizontalSpacing="10dp"
            android:numColumns="5"
            android:id="@+id/gridViewHinhAnh"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </GridView>

    </LinearLayout>



</RelativeLayout>